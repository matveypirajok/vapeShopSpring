<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create-cartridge-table" author="Mat">
        <createTable tableName="cartridge">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="resistance" type="double"/>
            <column name="price" type="double"/>
            <column name="store_id" type="int">
                <constraints foreignKeyName="store_cartridge_id_forKey" references="store(id)"/>
            </column>
            <column name="provider_id" type="int">
                <constraints foreignKeyName="provider_cartridge_id_forKey" references="provider(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>